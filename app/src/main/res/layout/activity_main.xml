<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btn_acceder"
        android:layout_width="151dp"
        android:layout_height="118dp"
        android:layout_marginTop="88dp"
        android:layout_marginEnd="156dp"
        android:onClick="abirmenu"
        android:text="@string/btn_ingresar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/id_caja_Contra" />

    <TextView
        android:id="@+id/lbl_Contraseña"
        android:layout_width="151dp"
        android:layout_height="21dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="64dp"
        android:text="@string/lbl_contra"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/id_caja_User" />

    <EditText
        android:id="@+id/id_caja_User"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="27dp"
        android:layout_marginEnd="180dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lbl_Usuario" />

    <EditText
        android:id="@+id/id_caja_Contra"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="22dp"
        android:layout_marginEnd="180dp"
        android:ems="10"
        android:inputType="textPassword"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lbl_Contraseña"
        tools:ignore="SpeakableTextPresentCheck" />

    <TextView
        android:id="@+id/lbl_Usuario"
        android:layout_width="151dp"
        android:layout_height="21dp"
        android:layout_marginStart="19dp"
        android:layout_marginTop="209dp"
        android:text="@string/lbl_usuario"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>